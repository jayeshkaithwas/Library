<Window x:Class="LibraryManagementSystem.ReturnBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Return Book" Height="300" Width="400">
    <Grid>
        <!-- Your layout for returning a book -->
        <StackPanel Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Book Title:" Width="90" VerticalAlignment="Center"/>
                <TextBox x:Name="BookTitleTextBox" Grid.Column="1" Margin="5 0 0 5" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Member Name:" Width="90" VerticalAlignment="Center"/>
                <TextBox x:Name="MemberNameTextBox" Grid.Column="1" Margin="5 0 0 5" />
            </Grid>

            <Button Content="Return Book" Click="ReturnButton_Click" HorizontalAlignment="Center" Margin="0 10 0 0" Width="368"/>
        </StackPanel>
    </Grid>
</Window>
