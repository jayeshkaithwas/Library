<Window x:Class="LibraryManagementSystem.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Book" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Grid Margin="10">
                <TextBox Name="TitleTextBox" Width="340" VerticalAlignment="Center" TextChanged="TextBox_TextChanged"/>
                <TextBlock Text="Book Title" 
                           Foreground="Gray" 
                           IsHitTestVisible="False" 
                           VerticalAlignment="Center" 
                           Margin="5,0,0,0" 
                           x:Name="TitlePlaceholder"/>
            </Grid>
            <Grid Margin="10">
                <TextBox Name="AuthorTextBox" Width="340" VerticalAlignment="Center" TextChanged="TextBox_TextChanged"/>
                <TextBlock Text="Author" 
                           Foreground="Gray" 
                           IsHitTestVisible="False" 
                           VerticalAlignment="Center" 
                           Margin="5,0,0,0" 
                           x:Name="AuthorPlaceholder"/>
            </Grid>
            <Grid Margin="10"/>
            <Button Content="Add" Width="100" Height="30" Margin="10" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
